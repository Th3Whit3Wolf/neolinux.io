{
  "name": "neo",
  "version": "1.0.0",
  "description": "Neolinux.io Website",
  "main": "index.html",
  "author": "White Wolf",
  "license": "MIT",
  "scripts": {
    "sass": "node-sass --watch src/sass -o src/css",
    "deploy": "gh-pages -d dist",
    "html": "html-minifier --collapse-whitespace --remove-comments --remove-optional-tags --remove-redundant-attributes --remove-script-type-attributes --remove-tag-whitespace --use-short-doctype src/index.html -o dist/index.html",
    "js": "uglifyjs src/js/main.js --output dist/js/main.js"
  },
  "devDependencies": {
    "gh-pages": "^2.0.1",
    "html-minifier": "^4.0.0",
    "node-sass": "^4.12.0",
    "typescript": "^3.5.3",
    "uglify-es": "mishoo/UglifyJS2#harmony"
  }
}
